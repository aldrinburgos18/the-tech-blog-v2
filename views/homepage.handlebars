<div class="mx-auto fill pt-4" style="width: 80%;background-color: #9893DA;">
  <h4>Welcome, {{req.session.firstname}}</h4>
  {{#each posts}}
<div class="mx-auto card border-dark mt-3 mb-3" style="width: 95%;">
  <div class="card-body pt-0 pe-0">
    <div class="d-flex justify-content-end">
      <p class="fst-italic pe-1 text-black-50">{{format_date created_at}}</p>
    </div>
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{coconut}}</p>
    <div class="row">
        <div class="col-8">
          <a class="link-dark" href="/post/{{id}}">{{comments.length}} comments </a>
          </div>
        <div class="col-4 text-end">
          <p class="mb-0 pe-2">❤️{{upvote_count}} coco-ros | 👎{{downvote_count}} </p>
        </div> 
    </div>
  </div>
  <div class="card-footer text-black-50">
    Posted by: <a class="link-dark" href="/user/{{user.id}}">{{user.username}} ({{user.firstname}} {{user.lastname}})</a> 
  </div>
</div>
{{/each}}
</div>