<div class="mx-auto container-fluid pt-4 ps-2 flex-fill" style="width: 80%;background-color: #9893DA;" id="page-content">
  
  <div class="row">
        <div class="col-8">
          <h4>Hello, {{username}}!</h4>
        </div>
        <div class="col-4 text-end">
          <a href="create-post" class="link-dark"><i class="oi oi-plus"></i> Create a new post</a>
        </div>
  </div>
  {{#each posts}}
<div class="mx-auto card border-dark mt-3 mb-3" style="width: 95%;">
  <div class="card-body pt-0 pe-0">
    <div class="d-flex justify-content-end">
      <p class="fst-italic pe-1 text-black-50">{{format_date created_at}}</p>
    </div>
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{coconut}}</p>
    <div class="row">
        <div class="col-8">
          <a class="link-dark" href="/post/{{id}}">{{comments.length}} comments </a>
          </div>
        <div class="col-4 text-end pe-4">
          {{#if upvotes}}
          <button class="btn btn-sm selected-outline-purple mb-0 pe-2 upvote-btn" data-post-id="{{id}}" data-upvote-id="{{upvotes.[0].id}}" value="true">❤️ {{upvote_count}} coco-ros</button>
          {{else}}
          <button class="btn btn-sm btn-outline-purple mb-0 pe-2 upvote-btn" data-post-id="{{id}}" data-upvote-id="{{upvotes.[0].id}}">❤️ {{upvote_count}} coco-ros</button>
          {{/if}}
           | 
          {{#if downvotes}}
          <button class="btn btn-sm selected-outline-danger mb-0 pe-2 downvote-btn" data-post-id="{{id}}" data-downvote-id="{{downvotes.[0].id}}" value="true">👎{{downvote_count}} </button>
          {{else}}
          <button class="btn btn-sm btn-outline-danger mb-0 pe-2 downvote-btn" data-post-id="{{id}}" data-downvote-id="{{downvotes.[0].id}}">👎{{downvote_count}} </button>
          {{/if}}
        </div> 
    </div>
  </div>
  <div class="card-footer text-black-50">
    Posted by: <a class="link-dark" href="/user/{{user.id}}">{{user.username}} ({{user.firstname}} {{user.lastname}})</a> 
  </div>
</div>
{{/each}}
</div>
<script src="/js/vote.js"></script>