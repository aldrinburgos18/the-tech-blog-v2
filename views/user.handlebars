<div class="mx-auto container-fluid pt-4 ps-2 flex-fill" style="width: 80%;background-color: #9893DA;">
    <div class="container-fluid m-0 p-0">
        <div class="row m-0 p-0">
            <div class="col-12 d-flex justify-content-end m-0 p-0">
                <button class="btn" onclick="history.back()">← Back</button>
            </div>
        </div>
        <div>
            <h3 class="varela">Posts by {{user.username}} ({{user.firstname}} {{user.lastname}})</h3>
        </div>
    </div>
    {{#each user.posts}}
    <div class="mx-auto card border-dark mt-3 mb-3" id="user-post">
        <div class="card-body pt-0 pe-0">
            <div class="d-flex justify-content-end">
                <p class="fst-italic pe-1 text-black-50">{{format_date created_at}}</p>
            </div>
            <h5 class="card-title" id="post-title">{{title}}</h5>
            <p class="card-text" id="post-content">{{coconut}}</p>
            <div class="row">
                <div class="col-8">
                    <a class="link-dark" href="/post/{{id}}">{{comments.length}} comments </a>
                </div>
                <div class="col-4 text-end">
                    <p class="mb-0 pe-2">❤️{{upvote_count}} coco-ros | 👎{{downvote_count}} </p>
                </div> 
            </div>
        </div>
    </div>
    {{/each}}
</div>