<div class="d-flex align-items-center justify-content-center" style="height: 75vh">
  <section class="vh-100 w-50">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10 h-50">
        <div class="card bg-white p-5" style="border-radius: 3rem;">
          <div class="card-body login-form">
            <div>
              <p class="fs-3 p-1 text-center fw-bold varela">Create a new account:</p>
            </div>
            <form>
              <div class="p-1">
                First Name:
                <input class="form-control form-control-md login-input" type="text" placeholder="First Name" aria-label="firstNameInput" id="firstname" autocomplete="off">
              </div>
              <div class="p-1">
                Last Name:
                <input class="form-control form-control-md login-input" type="text" placeholder="Last Name" aria-label="lastNameInput" id="lastname" autocomplete="off">
              </div>
              <div class="p-1">
                Email address:
                <input class="form-control form-control-md login-input" type="text" placeholder="E-mail address" aria-label="emailInput" id="email" autocomplete="off">
              </div>
              <div class="p-1">
                Username:
                <input class="form-control form-control-md login-input" type="text" placeholder="Username" aria-label="usernameInput" id="username" autocomplete="off">
              </div>
              <div class="p-1">
                Password:
                <input class="form-control form-control-md login-input" type="password" placeholder="Password" aria-label="passwordInput" id="password" autocomplete="off">
              </div>
              <div class="p-3 d-flex justify-content-center">
                <button class="btn btn-sm form-button" type="submit">Register!</button>
              </div>
            </form>
            <div class="pt-4 d-flex justify-content-center">
              <a class="varela" href="/login">Already have an account? Click here.</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
<script src="./js/register.js" />